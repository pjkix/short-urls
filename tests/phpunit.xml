<!-- phpunit config -->
<phpunit bootstrap="./phpunit-bootstrap.php">
	<testsuite name="ShortUrl Test Suite">
		<directory>./</directory>
	</testsuite>

	<filter>
		<whitelist>
			<directory suffix=".php">../lib/</directory>
			<directory suffix=".php">../scripts/</directory>
			<exclude>
				<directory suffix=".phtml">./</directory>
				<directory suffix="*Test.php">./</directory>
			</exclude>
		</whitelist>
	</filter>


	<logging>
		<log type="coverage-html" target="../build/reports" charset="UTF-8"
			yui="true" highlight="true"
			lowUpperBound="50" highLowerBound="80"/>
		<log type="testdox-html" target="../build/testdox.html" />
	</logging>
	
	
	<selenium>
	  <browser name="Firefox on Mac OS X"
	           browser="*firefox"
	           host="localhost"
	           port="4444"
	           timeout="30000"/>
	  <browser name="Safari on Mac OS X"
	           browser="*safari"
	           host="localhost"
	           port="4444"
	           timeout="30000"/>
	</selenium>
	
</phpunit>
